<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

            <RelativeLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tv_events_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Info"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:id="@+id/tv_events_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cheese_ipsum"
                    android:layout_below="@+id/tv_events_title"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:text="Participate"
                    android:textSize="11dp"
                    android:id="@+id/btn_event_part"
                    android:layout_alignBottom="@+id/btn_event_int"
                    android:layout_alignRight="@+id/tv_events_description"
                    android:layout_alignEnd="@+id/tv_events_description" />

                <Button
                    android:id="@+id/btn_event_int"
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:text="Interested"
                    android:textSize="11dp"

                    android:layout_marginRight="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_below="@+id/tv_events_description"
                    android:layout_toLeftOf="@+id/btn_event_part"
                    android:layout_toStartOf="@+id/btn_event_part"
                    android:layout_marginTop="48dp" />

                <TextView
                    android:id="@+id/tv_events_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Id"
                    android:visibility="gone"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>